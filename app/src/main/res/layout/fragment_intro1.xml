<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Curved Blue Card -->
    <View
        android:id="@+id/card_background"
        android:layout_width="324dp"
        android:layout_height="362dp"
        android:background="@drawable/intro_div_bg"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Illustration Image -->

    <!-- Title Text -->
    <ImageView
        android:id="@+id/star1"
        android:layout_width="22dp"
        app:layout_constraintTop_toTopOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/star" />
    <ImageView
        android:id="@+id/star2"
        android:layout_width="22dp"
        app:layout_constraintTop_toTopOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="70dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/star" />
    <ImageView
        android:id="@+id/star3"
        android:layout_width="22dp"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:layout_height="22dp"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/illustration_image"
        android:layout_width="368dp"
        android:layout_height="368dp"
        android:layout_marginTop="96dp"
        android:layout_marginBottom="220dp"
        android:contentDescription="Intro Image"
        android:scaleType="fitCenter"
        android:src="@drawable/intro_image1"
        app:layout_constraintBottom_toBottomOf="@+id/card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="235dp"
        android:layout_height="72dp"
        android:text="Game on,\n Rewards Unlocked!"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/illustration_image"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="252dp"
        android:layout_height="63dp"
        android:text="Play exciting games and earn amazing rewards The more you play, the more you win!"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:maxLines="3"
        android:gravity="center"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Next Button (Arrow) -->
    <ImageButton
        android:id="@+id/next_button_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_button_bg"
        android:contentDescription="Next"
        android:src="@drawable/baseline_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle_text"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
